<%= form_with url: "/players/#{@player.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: "#{@player.name}" %>

  <%= form.label :age %>
  <%= form.text_field :age, value: "#{@player.age}"%>

  <%= form.label :retired? %>
  <%= form.text_field :retired, value: "#{@player.retired}"%>

  <%= form.submit 'Update Player' %>
<% end %>
